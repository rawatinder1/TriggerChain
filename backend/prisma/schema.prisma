generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
  chains   Chain[]
}

model Chain {
  id           String  @id @default(uuid())
  triggerId    String
  userId       Int
  trigger      Trigger?
  actions      Action[]
  chainRuns    ChainRun[]
  user         User @relation(fields: [userId], references: [id])
}

model Trigger {
  id          String  @id @default(uuid())
  chainId     String  @unique
  triggerId   String
  metadata    Json    @default("{}")
  type        AvailableTrigger @relation(fields: [triggerId], references: [id])
  chain       Chain   @relation(fields: [chainId], references: [id])
}

model Action {
  id           String  @id @default(uuid())
  chainId      String
  chain        Chain   @relation(fields: [chainId], references: [id])
  actionId     String
  metadata     Json    @default("{}")
  type         AvailableAction @relation(fields: [actionId], references: [id])
  sortingOrder Int     @default(0)
}

model AvailableAction {
  id       String @id @default(uuid())
  name     String
  image    String
  actions  Action[]
}

model AvailableTrigger {
  id       String @id @default(uuid())
  name     String
  image    String
  triggers Trigger[]
}

model ChainRun {
  id              String @id @default(uuid())
  chainId         String
  metadata        Json
  chain           Chain @relation(fields: [chainId], references: [id])
  chainRunOutbox  ChainRunOutbox?
}

model ChainRunOutbox {
  id          String @id @default(uuid())
  chainRunId  String @unique
  chainRun    ChainRun @relation(fields: [chainRunId], references: [id])
}